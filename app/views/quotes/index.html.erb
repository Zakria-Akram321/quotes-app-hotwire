<p style="color: green"><%= notice %></p>

<div class="my-3" data-controller="hello">
  <input type="text" data-hello-target="names" placeholder="Enter your name...." />
  <button data-action="click->hello#greet">Greet</button>
</div>

<div class="my-3" data-controller="copy">
  PIN: <input type="text" data-copy-target="source" value="1234" readonly>
  <button data-action="copy#copyToClipboard">Copy to Clipboard</button>
</div>

<div data-controller="slideshow" class="my-3">
  <button data-action="slideshow#prev"> ← </button>
  <button data-action="slideshow#next"> → </button>

  <div data-slideshow-target="slide">🐵</div>
  <div data-slideshow-target="slide">🙈</div>
  <div data-slideshow-target="slide">🙉</div>
  <div data-slideshow-target="slide">🙊</div>
</div>


<%= turbo_frame_tag "quotes" do %>
  <div class="flex justify-between">
    <h1 class="text-4xl font-semibold">Quotes</h1>
    <%= link_to "Add quotes", 
                new_quote_path, 
                data: {turbo_frame: "new_quote"},
                class:"bg-[#df5034] px-7 py-3 text-white font-semibold capitalize inline-block rounded-lg" %>
  </div>
<%end%>
<hr class="my-4">

<%= turbo_stream_from current_company, "all_quotes" %>

<%= turbo_frame_tag "new_quote" %>

<%= turbo_frame_tag "all_quotes" do %>
    <%= render @quotes %>
<%end%>
