<p style="color: green"><%= notice %></p>

<div class="my-3" data-controller="hello">
  <input type="text" data-hello-target="names" placeholder="Enter your name...." />
  <button data-action="click->hello#greet">Greet</button>
</div>

<div class="my-3" data-controller="copy">
  PIN: <input type="text" data-copy-target="source" value="1234" readonly>
  <button data-action="copy#copyToClipboard">Copy to Clipboard</button>
</div>

<div data-controller="slideshow" data-slideshow-index-value="0" class="my-3">
  <%# <div> %>
    <button data-action="slideshow#prev" data-slideshow-target="btn"> ← </button>
    <button data-action="slideshow#next" data-slideshow-target="btn"> → </button>
  <%# </div> %>

  <div data-slideshow-target="slide" class="py-7 border-[1px] text-center">Slide 1</div>
  <div data-slideshow-target="slide" class="py-7 border-[1px] text-center">Slide 2</div>
  <div data-slideshow-target="slide" class="py-7 border-[1px] text-center">Slide 3</div>
  <div data-slideshow-target="slide" class="py-7 border-[1px] text-center">Slide 4</div>

  <div data-slideshow-target="totalSlides"></div>
</div>


<%= turbo_frame_tag "quotes" do %>
  <div class="flex justify-between">
    <h1 class="text-4xl font-semibold">Quotes</h1>
    <%= link_to "Add quotes", 
                new_quote_path, 
                data: {turbo_frame: "new_quote"},
                class:"bg-[#df5034] px-7 py-3 text-white font-semibold capitalize inline-block rounded-lg" %>
  </div>
<%end%>
<hr class="my-4">

<%= turbo_stream_from current_company, "all_quotes" %>

<%= turbo_frame_tag "new_quote" %>

<%= turbo_frame_tag "all_quotes" do %>
    <%= render @quotes %>
<%end%>
