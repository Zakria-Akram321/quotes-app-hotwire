<main class="container">
  <%= link_to sanitize("&larr; Back to quotes"), quotes_path, class:"text-blue-700 mb-5 inline-block" %>
  <div class="flex justify-between">
    <h1 class="text-4xl font-semibold">
      <%= @quote.quote %>
    </h1>
    <%= link_to "New date",
                new_quote_line_item_date_path(@quote),
                data: {turbo_frame: dom_id(LineItemDate.new)},
                class: "bg-[#df5034] px-7 py-3 text-white font-semibold capitalize inline-block rounded-lg" %>
  </div>
  <hr class="my-4">

  <%= turbo_frame_tag LineItemDate.new %>

  <%= turbo_frame_tag "line_item_dates" do %>
    <%= render @line_item_dates, quote: @quote %>
  <% end %>
</main>
