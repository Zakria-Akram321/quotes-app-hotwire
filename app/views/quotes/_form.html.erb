<%= form_with(model: quote) do |form| %>
  <% if quote.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
        <% quote.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :quote, class:"w-full rounded-md" %>
  </div>

  <div class="flex gap-3">
    <%= form.submit :submit, class:"bg-[#df5034] px-5 py-2 text-white font-semibold capitalize inline-block rounded-md mt-3 cursor-pointer" %>
    <%= link_to "Cancel", quotes_path, class: "bg-red-700 px-5 py-2 text-white font-semibold capitalize inline-block rounded-md mt-3 cursor-pointer" %>
  </div>
<% end %>