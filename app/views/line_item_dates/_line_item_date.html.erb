<%= turbo_frame_tag dom_id(line_item_date) do %>
  <div class="flex justify-between items-center bg-slate-700 px-5 py-4 shadow-md rounded-lg text-white my-3">
    <div class="line-item-date__header">
      <h2 class="line-item-date__title">
        <%= l(line_item_date.date, format: :long) %>
      </h2>
    </div>
      <div class="flex gap-2">
        <%= button_to "Delete",
                      [quote, line_item_date],
                      method: :delete,
                      class:"bg-[#df5034] px-2 py-2 shadow-md rounded-md flex items-center" %>
        <%= link_to "Edit",
                    [:edit, quote, line_item_date],
                    class: "bg-[#df5034] px-2 py-2 shadow-md rounded-md flex items-center" %>
      </div>
    
  </div>
<%end%>